{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "dependencies": {
    "dotenv": "^6.2.0",
    "firebase-admin": "~7.0.0",
    "firebase-functions": "^2.2.0",
    "twitter": "^1.7.1"
  },
  "devDependencies": {
    "eslint": "^5.12.0"
  },
  "private": true,
  "scripts": {
